<%= render "shared/header" %>
<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">生産者の新規登録</h2>

      <%= form_with model: @producer, url: producer_registration_path, local: true do |f| %>
        <%= render 'shared/error_messages', model: f.object %>
        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, id:"producer_email", placeholder: "PC・携帯どちらでも可", autofocus: true, autocomplete: "email" %>
          <span class="indispensable">必須</span>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, id:"producer_password", placeholder: "6文字以上の半角英数字", autocomplete: "new-password" %>
          <span class="indispensable">必須</span>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, id:"producer_password_confirmation", placeholder: "同じパスワードを入力してください", autocomplete: "new-password" %>
          <span class="indispensable">必須</span>
        </div>

        <div class="field">
          <%= f.label :farm_name, "生産者の名前(農園名)" %><br />
          <%= f.text_field :farm_name, id:"producer_farm_name", placeholder: "例)TSUNAGU FARM", maxlength: "40" %>
          <span class="indispensable">必須</span>
        </div>

        <div class="field">
          <%= f.label :category, "カテゴリー" %>
          <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box"}) %>
          <span class="indispensable">必須</span>
        </div>

        <div class="field">
          <%= f.label :main_product, "主要生産物" %>
          <%= f.collection_select(:main_product_id, MainProduct.all, :id, :name, {}, {class:"select-box"}) %>
          <span class="indispensable">必須</span>
        </div>

        <div class="field">
          <%= f.label :farm_characteristic, "生産農園のご紹介文" %><br/>
          <%= f.text_area :farm_characteristic, class: :form__text, id:"user_occupation", placeholder: "生産農園の説明  例）東京奥多摩の山々に囲まれた自然豊かな環境の中にある約1,000坪の農地を耕作しています。「安心・安全な野菜を作る」をモットーに、農薬を極力減らして作る様々な野菜を丁寧に栽培しています。" %>
          <span class="indispensable">必須</span>
        </div>

        <%= f.fields_for :address do |address| %>
          <div class="field">
            <%= address.label :postal_code, "郵便番号" %><br />
            <%= address.text_field :postal_code, id:"producer_postal_code", placeholder: "例)123-4567", maxlength: "8" %>
            <span class="indispensable">必須</span>
          </div>

          <div class="field">
            <%= address.label :prefecture, "都道府県" %>
            <%= address.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box"}) %>
            <span class="indispensable">必須</span>
          </div>

          <div class="field">
            <%= address.label :municipality, "市区町村" %><br />
            <%= address.text_field :municipality, id:"producer_municipality", placeholder: "例)東京都渋谷区" %>
            <span class="indispensable">必須</span>
          </div>

          <div class="field">
            <%= address.label :house_number, "町名・番地" %><br />
            <%= address.text_field :house_number, id:"producer_houce_number", placeholder: "例)渋谷町1-1-1" %>
            <span class="indispensable">必須</span>
          </div>

          <div class="field">
            <%= address.label :building_name, "建物名" %><br />
            <%= address.text_field :building_name, id:"producer_building_name", placeholder: "例)渋谷ビル101" %>
          </div>

          <div class="field">
            <%= address.label :phone_number, "電話番号" %><br />
            <%= address.text_field :phone_number, id:"producer_phone_number", placeholder: "例)09012345678", maxlength: "11" %>
            <span class="indispensable">必須</span>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
      <%= link_to '戻る', root_path, class: :link__btn %>
    </div>
  </div>
</div>
<%= render "shared/footer" %>