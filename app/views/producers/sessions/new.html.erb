<%= render "shared/header" %>
<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">生産者のログイン</h2>

      <%= form_with model: @producer, url: producer_session_path, local: true do |f| %>
        <%= render 'shared/error_messages', model: f.object %>
        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, id:"producer_login_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, id:"producer_login_password", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render "shared/footer" %>