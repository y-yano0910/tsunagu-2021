<%= render "shared/product_header" %>
<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">商品(生産物)情報の編集</h2>

      <%= form_with(model: @product, local: true) do |f| %>
        <%= render 'shared/error_messages', model: f.object %>

        <div class="field">
          <%= f.label :name, "商品(生産品)の名前" %>
          <%= f.text_field :name, class: "form__field", id:"product_name", placeholder: "例)トマト", maxlength: "40" %>
          <span class="indispensable">必須</span>
        </div>

        <div class="field">
          <%= f.label :image, "商品(生産品)の画像" %>
          <%= f.file_field :image, class: "image__field", id:"product_image" %>
          <span class="indispensable">必須</span>
        </div>

        <div class="field">
          <%= f.label :price, "価格設定" %>
          <%= f.number_field :price, id:"product_price", placeholder:"例) 10 〜 999,999 まで" %>円
          <span class="indispensable">必須</span>
        </div>

        <div class="field">
          <%= f.label :capacity_id, "単位価格表示" %>
          <%= f.collection_select(:capacity_id, Capacity.all, :id, :name, {}, {class:"select-box"}) %>
          <span class="indispensable">必須</span>
        </div>

        <div class="field">
          <%= f.label :main_product_id, "商品(生産品)の種類" %>
          <%= f.collection_select(:main_product_id, MainProduct.all, :id, :name, {}, {class:"select-box"}) %>
          <span class="indispensable">必須</span>
        </div>

        <div class="field">
          <%= f.label :features, "商品(生産品)のご紹介文" %>
          <%= f.text_area :features, class: :form__text, id:"product_features", placeholder: "例) トマトの甘みとコクを最大限に引き出すために、トマトの生育に最適な環境を作って育てました！濃厚な味わいです！" %>
          <span class="indispensable">必須</span>
        </div>

        <div class="actions">
          <%= f.submit "更新する", class: :form__btn  %>
        </div>
      <% end %>
        
      <%= link_to '詳細ページへ', @product, class: :link__btn %> |
      <%= link_to '一覧へ戻る', producer_path(current_producer.id), class: :link__btn %>
    </div>
  </div>
</div>
<%= render "shared/footer" %>
