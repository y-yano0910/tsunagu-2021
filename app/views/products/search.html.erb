<%= render "shared/customer_header" %>
<main class="main">
  <div class="inner">
    <h2 class="page-heading">
      <%= "商品の検索結果一覧" %>
    </h2>
    <table class="sort__table">
      <thead>
        <tr>
          <th>表示順:</th>
          <th><%= sort_link(@p, :created_at, "登録日時") %></th>
          <th><%= sort_link(@p, :updated_at, "更新日時") %></th>
          <th><%= sort_link(@p, :name, "商品名(生産品)") %></th>
          <th><%= sort_link(@p, :main_product_id, "生産品の種類") %></th>
          <th><%= sort_link(@p, :producer_id, "生産者名(農園名)") %></th>
          <th colspan="5"></th>
        </tr>
      </thead>
    </table>
    <div class="card__wrapper">
      <% if @results.length !=0 %>
        <%= render partial: "product", collection: @results %>
      <% else %>
        該当する商品はありません
      <% end %>
    </div>
    <div class="paginate">
      <%= paginate @results %>
    </div>
  </div>
</main>
<%= render "shared/footer" %>